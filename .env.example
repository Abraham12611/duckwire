# Smart Contract Deployment Configuration
PRIVATE_KEY=your_private_key_here
DUCKCHAIN_MAINNET_RPC=https://rpc.duckchain.io
DUCKCHAIN_TESTNET_RPC=https://testnet-rpc.duckchain.io
DUCKCHAIN_API_KEY=your_duckchain_api_key_for_verification

# Existing DuckWire Configuration
# WalletConnect Cloud project ID for RainbowKit/Wagmi
# Create one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# News provider API keys (set server-side only; do not expose client-side)
# NewsAPI.org — https://newsapi.org/
NEWSAPI_ORG_KEY=
# GNews — https://gnews.io/
GNEWS_API_KEY=
# NewsData.io — https://newsdata.io/
NEWSDATA_API_KEY=
# ChainGPT — https://chaingpt.org/
CHAINGPT_API_KEY=
# Event Registry (NewsAPI.ai) — https://eventregistry.org/
NEWSAPI_AI_API_KEY=

## Supabase (Admin UI)
# Supabase API URL (from project settings)
SUPABASE_URL=
# Supabase anon key (from project settings)
SUPABASE_ANON_KEY=
# Supabase service role key (SERVER ONLY; do not expose to client)
SUPABASE_SERVICE_ROLE_KEY=

# Secret for signing admin session cookie (set to a long random string)
ADMIN_COOKIE_SECRET=

## OpenRouter (AI routing)
# API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=
# Optional: override base URL (default https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=
# Optional: app name for OpenRouter usage attribution
OPENROUTER_APP_NAME=DuckWire/Clustering

# Smart Contract Addresses (will be populated after deployment)
NEXT_PUBLIC_DUCK_TOKEN_ADDRESS=
NEXT_PUBLIC_STAKING_CONTRACT_ADDRESS=
NEXT_PUBLIC_BOUNTY_CONTRACT_ADDRESS=
